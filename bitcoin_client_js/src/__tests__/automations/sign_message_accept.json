{
  "version": 1,
  "rules": [
    {
      "regexp": "Path|Message hash",
      "actions": [
        ["button", 2, true],
        ["button", 2, false]
      ]
    },
    {
      "regexp": "Sign",
      "conditions": [
        [ "seen", false ]
      ],
      "actions": [
        ["setbool", "seen", true],
        ["button", 2, true],
        ["button", 2, false]
      ]
    },
    {
      "regexp": "Sign",
      "conditions": [
        [ "seen", true ]
      ],
      "actions": [
        ["setbool", "seen", true],
        [ "button", 1, true ],
        [ "button", 2, true ],
        [ "button", 2, false ],
        [ "button", 1, false ]
      ]
    }
  ]
}
